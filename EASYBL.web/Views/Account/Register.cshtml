@{
    ViewBag.Title = "Account/Register";
}
<div class="home_container">
    <div class="content_1">
        <div class="singup_form">
            <form action="/Account/Register" method="post">
                <div class="mb-3" style="list-style:none;color:red;">
                    @Html.ValidationSummary()
                </div>
                <div class="mb-3">
                    <label for="Name" class="form-label">Shop Name</label>
                    <input type="text" name="Name" class="form-control" id="email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="Number" class="form-label">Shop PhoneNumber</label>
                    <input type="text" name="Number" class="form-control" id="email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label">Shop Address</label>
                    <input type="text" name="Address" class="form-control" id="email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Shop Email</label>
                    <input type="email" name="Email" class="form-control" id="email" aria-describedby="emailHelp">
                </div>

                <div class="mb-3">
                    <label for="GstNo" class="form-label">Shop GSTNumber</label>
                    <input type="text" name="GstNo" class="form-control" id="email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" name="Password" class="form-control" id="password">
                </div>
                <div class="mb-3">
                    <label for="ConfirmPassowrd" class="form-label">Confirm Password</label>
                    <input type="password" name="ConfirmPassowrd" class="form-control" id="ConfirmPassowrd">
                </div>
                <button type="submit" class="btn btn-dark my-2">Register</button>
            </form>
        </div>
    </div>
    <div class="content_2">
        <img src="~/Content/images/simple-line-art-illustration-of-businessman-getting-stress-at-work-2BDYT4H.jpg" />
    </div>
</div>



